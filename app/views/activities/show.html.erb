<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
      <%= image_tag @activity.image[:large].url(public: true) %>
    </div>
	  <div class="col-md-8">
      <h2><%= @activity.title %></h2>
      <p><%= @activity.description %></p>

      <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary" %>
      <%= link_to 'Back', activities_path, class: "btn btn-primary" %>
    </div>
	</div>
</div>
